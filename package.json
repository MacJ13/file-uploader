{
  "name": "file-uploader",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:css": "postcss public/css/styles.css -o public/css/tailwind.css",
    "watch:css": "postcss public/css/styles.css -o public/css/tailwind.css --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently \"npm run watch:css\" \"cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/app.ts\"",
    "copy-views": "copyfiles -u 2 src/views/**/* dist/views",
    "build": "npm run build:css && tsc --project tsconfig.build.json && npm run copy-views",
    "start": "cross-env NODE_ENV=production node dist/app.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^17.0.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.7",
    "autoprefixer": "^10.4.21",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.11",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
