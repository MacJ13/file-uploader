<form class="flex items-center gap-3 form-upload-file" method="post" action="/file/upload" enctype="multipart/form-data">
  <label for="file" class="flex items-center gap-3 cursor-pointer">
    <div class="flex flex-col text-right">  
      <span class="text-xl font-bold uppercase">upload file</span>
      <span class="text-xs font-normal normal-case">max 4 MB</span>
    </div>
    <%- include("../icons/upload.ejs") %>
  </label>
  <input type="hidden" id="folderId" name="folderId" value="<%= locals.folderId %>" />
  <input class="hidden" type="file" id="file" name="file"/>
</form>