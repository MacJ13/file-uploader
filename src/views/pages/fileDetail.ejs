            <span class="dashboard-table-row"><%= new Date(file.created_at).toLocaleString(); %></span>
          </li>
          <li class="file-item">
            <span class="file-label">size</span>
            <span class="dashboard-table-row"><%= (file.size / 1024).toFixed(2); %> KB</span>
          </li>
          <li class="file-item">
            <span class="file-label">location</span>
            <span class="dashboard-table-row"><%= file.folder ? file.folder.name : '-' %></span>
          </li>
        </ul>
      </div>
      <div class="file-links">
        <a href="/file/<%= file.id %>/update" class="bg-neutral-50/33 file-link">Update file</a>
