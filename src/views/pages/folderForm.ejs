 <%- include("../partials/navigation.ejs") %>
<body class="body">

<main class="main py-8">
  <div class="flex-1 flex min-h-0 w-full">
    <%- include("../partials/sidebar.ejs") %>
    <div class="mt-5 mx-auto w-full max-w-2xl px-10">
      <h1 class="text-4xl text-center font-bold mb-4 uppercase">Create new folder</h1>
      <form class="form-box" method="post" action="/folder/create">
        <div class="form-field">
          <label for="title" class="form-label">title</label>
          <input id="title" type="text" name="title" value="<%= locals.data ? data.title : '' %>" class="form-input" />
        </div>  
        <div class="form-field form-field-last">
          <button class="form-button" type="submit">login</button>
        </div>
        <% if(locals.errors) { %>
          <%- include("../partials/errorFields.ejs") %>
        <% } %>
      </form>
    </div>
  </div>
</main>  
</body>

