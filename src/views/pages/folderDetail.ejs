<%- include("../partials/head.ejs") %>
<!-- <body class="bg-gray-100 flex items-center justify-center h-screen"></body> -->
 <%- include("../partials/navigation.ejs") %>
<body class="body">

<main class="main py-8">
  <div class="flex-1 flex min-h-0 w-full">
    <%- include("../partials/sidebar.ejs") %>
    <div class="mt-5 mx-auto w-full px-10">
      <div class="flex justify-between w-full">
        <div class="flex flex-row items-center gap-5">
         <a href="<%= locals.backLink %>">
            <%- include("../icons/backArrow.ejs") %> 
          </a> 
           <h1 class="text-4xl font-bold uppercase"><%= locals.folder.name %></h1>
        </div>
        <div class="flex flex-row gap-8">
          <%- include("../partials/folderListForm.ejs") %>
          <%- include("../partials/uploadFileForm.ejs", { folderId: locals.folder.id }) %>
          <!-- <form class="flex items-center gap-3 form-upload-file" method="post" action="/file/upload" enctype="multipart/form-data">
            <label for="file" class="flex items-center gap-3 text-lg font-bold uppercase cursor-pointer">
              <%- include("../icons/upload.ejs") %>
              upload file
            </label>
            <input type="hidden" id="folderId" name="folderId" value="<%= locals.folder ? locals.folder.id : null %>" />
            <input class="hidden" type="file" id="file" name="file"/>
          </form> -->
        </div>
       
      </div>
      <% if(locals.folder.subfolders.length || locals.folder.files.length) { %>
        <table class="dashboard-list gap-5">
          <thead class="w-full">
            <tr class="dashboard-table-head">
              <th class="flex flex-2 gap-2 items-center">
                name:
              </th>
              <th class="flex-1">created at:</th>
              <th class="h-5 w-5">&nbsp;</th>
            </tr>
          </thead> 
          
          <tbody class="w-full flex flex-col gap-8 file-list">
            <% locals.folder.subfolders.forEach(folder => { %>
                <tr data-id="<%= folder.id %>" class="dashboard-table-row">
                      <td class="flex-2 ">
                        <a class="flex gap-2 items-center" href="/folder/<%= folder.id %>">
                          <%- include("../icons/folder.ejs") %>
                          <span><%= folder.name %></span>
                        </a>
                      </td>
                      <td class="flex-1"><%= new Date(folder.created_at).toLocaleString(); %></td>
                    
                      <td class="relative">
                        <%- include("../icons/more.ejs") %>
                        <%- include("../partials/folderWindowMenu.ejs", {id: folder.id}) %>
                      
                    </tr>
            <% }); %>
            <% locals.folder.files.forEach(file => { %>
                <tr data-id="<%= file.id %>" class="dashboard-table-row">
                      <td class="flex-2 ">
                        <a class="flex gap-2 items-center" href="/file/<%= file.id %>">
                          <%- include("../icons/file.ejs") %>
                          <span><%= file.name %></span>
                        </a>
                      </td>
                      <td class="flex-1"><%= new Date(file.created_at).toLocaleString(); %></td>
                    
                      <td class="relative">
                        <%- include("../icons/more.ejs") %>
                        <%- include("../partials/fileWindowMenu.ejs", { id: file.id, name: file.name }) %>
                      </td>            
                    </tr>
            <% }); %>
          </tbody>
        </table>
      <% }  else { %>
        <em>there is no items. add new folder or file</em>
      <% } %>  
    </div>
  </div>
</main>  

<script src="../../../public/js/itemWindow.js"></script>
<script src="../../../public/js/uploadFile.js"></script>
<script src="../../../public/js/downloadFile.js"></script>
</body>

<%- include("../partials/footer.ejs") %>